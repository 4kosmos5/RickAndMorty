<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_episode"
    app:startDestination="@+id/episodeFragment">

    <fragment
        android:id="@+id/episodeFragment"
        android:name="com.semyon.rickandmorty.ui.screen.episode.EpisodeFragment"
        android:label="@string/title_episode"
        tools:layout="@layout/fragment_episode">

        <action
            android:id="@+id/action_episodeFragment_to_infoCharacterFragment"
            app:destination="@id/infoCharacterFragment"/>

    </fragment>

    <fragment
        android:id="@+id/infoCharacterFragment"
        android:name="com.semyon.rickandmorty.ui.screen.character.InfoCharacterFragment"
        android:label="Информация о персонаже"
        tools:layout="@layout/fragment_info_character"/>

</navigation>